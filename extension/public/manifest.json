{
    "name": "Scrime",
    "version": "1.0.0",
    "manifest_version": 2,
    "description": "Control your screen time with Scrime",
    "icons": {
        "512": "logo512.png"
    },
    "browser_action": {
        "default_icon": "logo512.png",
        "default_popup": "popup.html"
    },
    "background" : {
        "scripts" : ["background.bundle.js"],
        "persistent": false
    },
    "permissions": [
        "notifications",
        "storage",
        "tabs",
        "*://*/*",
        "http://*/",
        "https://*/"
    ],
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
